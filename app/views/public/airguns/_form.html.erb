<%= form_with model: airgun, url: '/airguns',local:true do |f| %>
  <div class="form-group">
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="form-group">
    <%= f.label :category %>
    <%= f.select :category_id, Category.pluck(:category_name, :id), class: 'form-control category_id' %>
  </div>
  <div class="form-group">
    <%= f.label :gun_name %>
    <%= f.text_field :gun_name, class: 'form-control airgun_title' %>
  </div>
  <div class="form-group">
    <%= f.label :gun_caption %>
    <%= f.text_area :gun_caption, class: 'form-control airgun_body' %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
  
<% end %>
<!--local:true 同期通信の関係-->
<!--url: '/airguns'これがないと今いるページにいく。-->
<!--GET POST（メソッド） と　URLの関係性を見るこれでアクションが決まる。-->